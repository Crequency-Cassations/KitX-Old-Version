<UserControl x:Class="Player.VideoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Player"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="rgd" Width="300">
        <DockPanel Margin="10,0,20,0" VerticalAlignment="Center">
            <Button x:Name="btn" Style="{DynamicResource MaterialDesignOutlinedButton}" DockPanel.Dock="Right" VerticalAlignment="Center">
                <Path Width="16" Height="16" Fill="{DynamicResource MaterialDesignToolTipBackground}" Data="F1 M 17.5 10 L 5 18.75 L 5 1.25 Z M 6.25 16.347656 L 15.322266 10 L 6.25 3.652344 Z "/>
            </Button>
            <TextBlock DockPanel.Dock="Left" x:Name="tbl" Foreground="{DynamicResource MaterialDesignToolTipBackground}" VerticalAlignment="Center"/>
            <Grid Width="10"/>
        </DockPanel>
    </Grid>
</UserControl>
