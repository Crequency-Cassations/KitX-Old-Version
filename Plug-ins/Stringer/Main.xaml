                                                <DockPanel DockPanel.Dock="Left">
                                                    <TextBlock Margin="5" Text="语速: " DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown x:Name="SpeechRater" Value="5" Minimum="0" Maximum="10" VerticalAlignment="Center" Increment="1"/>
                                                </DockPanel>
                                                <Label/>
                                                <DockPanel>
                                                    <TextBlock Margin="5" Text="音量: " DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                    <TextBlock Margin="5" Text="{Binding ElementName=SpeechVolumner, Path=Value, Converter={StaticResource getVol}}" DockPanel.Dock="Right" VerticalAlignment="Center"/>
                                                    <Slider x:Name="SpeechVolumner" Value="80" Minimum="0" Maximum="100" VerticalAlignment="Center" SmallChange="1"/>
                                                </DockPanel>
                                            </DockPanel>
                                            <Label/>
                                            <DockPanel>
                                                <Button Margin="5" Style="{DynamicResource MaterialDesignOutlinedButton}" DockPanel.Dock="Right" Content="中止" ToolTip="中止所有正在进行的朗读任务" x:Name="Aborter_Speech"/>
                                                <Button Margin="5" Style="{DynamicResource MaterialDesignOutlinedButton}" Tag="{Binding ElementName=SpeechMethod_Selecter, Path=SelectedIndex}" x:Name="ToVoice_SingleReading" Click="ToVoice_SingleReading_Click" Content="单次朗读"/>
                                            </DockPanel>
                                            <Label/>
                                            <DockPanel>
                                                <Button Margin="5" Content="保存" DockPanel.Dock="Right" Click="SaveSpeech"/>
                                                <Button Margin="5" Content="..." Style="{DynamicResource MaterialDesignOutlinedButton}" DockPanel.Dock="Right" Click="SpeakSavePath"/>
                                                <TextBlock Margin="5" Text="合成音频保存路径" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                                                <TextBox x:Name="WPSetter" Text="Desktop" VerticalAlignment="Center"/>
                                            </DockPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <md_controls:TransitionerSlide.BackwardWipe>
                                <materialDesign:SlideWipe Direction="Right"/>
                            </md_controls:TransitionerSlide.BackwardWipe>
                            <materialDesign:TransitionerSlide.ForwardWipe>
                                <materialDesign:SlideWipe Direction="Left" />
                            </materialDesign:TransitionerSlide.ForwardWipe>
                        </materialDesign:TransitionerSlide>
                        <!--#endregion-->
                        
                        <!--#region 分析 -->
                        <materialDesign:TransitionerSlide>
                            <DockPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <DockPanel>
                                        <Grid DockPanel.Dock="Top">
                                            <DockPanel Margin="10">
                                                <TextBlock DockPanel.Dock="Left" Text="字号: "/>
                                                <TextBlock DockPanel.Dock="Right" Text="{Binding ElementName=Analyze_Fontsize, Path=Value, Converter={StaticResource getFontsize}}"/>
                                                <Slider Margin="5,0" x:Name="Analyze_Fontsize" Minimum="1" Maximum="128" Value="16"/>
                                            </DockPanel>
                                        </Grid>
                                        <ScrollViewer Margin="5" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                            <TextBox x:Name="Analyze_Input" Margin="5" TextChanged="Analyze_Input_TextChanged" AcceptsReturn="True" Text="在此放下文本..." Cursor="IBeam" FontSize="{Binding ElementName=Analyze_Fontsize, Path=Value}" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                        </ScrollViewer>
                                    </DockPanel>
                                    <ScrollViewer Margin="5" Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                        <StackPanel>
                                            <Expander Margin="5,0" Header="基础数据" Background="{DynamicResource MaterialDesignDivider}">
                                                <StackPanel Margin="5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="字符串长度" Grid.Column="0" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                        <TextBox Text="{Binding ElementName=Analyze_Input, Path=Text, Converter={StaticResource getLeng}}" IsReadOnly="True" Grid.Column="1" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                    </Grid>
                                                    <Label/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="字符串哈希值" Grid.Column="0" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                        <TextBox IsReadOnly="True" Text="{Binding ElementName=Analyze_Input, Path=Text, Converter={StaticResource getHash}}" Grid.Column="1" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                    </Grid>
                                                    <Label/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="行数" Grid.Column="0" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                        <TextBox IsReadOnly="True" Text="{Binding ElementName=Analyze_Input, Path=Text, Converter={StaticResource getLines}}" Grid.Column="1" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                    </Grid>
                                                    <Label/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="数字数" Grid.Column="0" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                        <TextBox IsReadOnly="True" Text="{Binding ElementName=Analyze_Input, Path=Text, Converter={StaticResource getNums}}" Grid.Column="1" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                    </Grid>
                                                    <Label/>
                                                    <DockPanel>
                                                        <TextBlock Text="特定字符数" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}" DockPanel.Dock="Left"/>
                                                        <TextBox x:Name="Analyze_SpecialChar" Text="," MinWidth="80" Margin="5" MaxLength="1" Foreground="{DynamicResource MaterialDesignToolTipBackground}"
                                                                 materialDesign:TextFieldAssist.HasClearButton="True" DockPanel.Dock="Left"/>
                                                        <TextBox x:Name="Analyze_specialConverted" IsReadOnly="True" Grid.Column="1" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                    </DockPanel>
                                                    <Label/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="中文动词数" Grid.Column="0" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                        <TextBox IsReadOnly="True" Text="{Binding ElementName=Analyze_Input, Path=Text, Converter={StaticResource getCNVerbs}}" Grid.Column="1" Margin="5" Foreground="{DynamicResource MaterialDesignToolTipBackground}"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Expander>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </DockPanel>
                            <md_controls:TransitionerSlide.BackwardWipe>
                                <materialDesign:SlideWipe Direction="Right"/>
                            </md_controls:TransitionerSlide.BackwardWipe>
                        </materialDesign:TransitionerSlide>
                        <!--#endregion-->
                        
                    </md_controls:Transitioner>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
